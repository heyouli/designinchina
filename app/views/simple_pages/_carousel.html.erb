<div id="carouselExampleIndicators" class="carousel slide landing-carousel" data-ride="carousel">

  <!-- indicators -->
  <ol class="carousel-indicators">
    <% @posts.each_with_index do |post| %>
    <li data-target="#carouselExampleIndicators" data-slide-to="0"></li>
    <% end %>
  </ol>

  <!-- wrapper for slides -->
  <div class="carousel-inner">
    <% @posts.each do |post| %>
    <div class="carousel-item<%= " active" if post == @posts.first %>">
      <%= image_tag(post.image_url, class: "img-fluid jumbotron-images") %>
      <div class="carousel-caption d-none d-md-block">
        <div class="theme-category mainpage-category">
          <h6><a href="#"><%= post.theme %></h6></a>
        </div>
        <div class="theme-title mainpage-title">
          <h5><a href="#"><%= post.name %></h5></a>
        </div>
        <div class="post-text mainpage-text">
          <p><%= post.description %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>


<!-- controls -->
<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  <span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
  <span class="carousel-control-next-icon" aria-hidden="true"></span>
  <span class="sr-only">Next</span>
</a>
  </div>
</div>
